<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_weight="1"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send"
            android:layout_weight="2"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_webServer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WEB Server IP/Port"
            android:layout_marginBottom="15dp"
            android:textSize="15sp"
            android:textColor="#707F7F"
            android:gravity="left" />

        <EditText
            android:id="@+id/edit_webIP"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:ems="10"
            android:textSize="15sp"
            android:layout_below="@+id/text_webServer"
            android:hint="IP"
            android:inputType="text"
            android:textColorHint="#CDCDCD"
            android:padding="10dp"
            android:text=""/>

        <EditText
            android:id="@+id/edit_webPort"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:ems="10"
            android:textSize="15sp"
            android:layout_below="@+id/edit_webIP"
            android:hint="PORT"
            android:inputType="number"
            android:textColorHint="#CDCDCD"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:text=""/>

        <TextView
            android:id="@+id/text_javaServer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="JAVA Server IP/Port"
            android:layout_below="@id/edit_webPort"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:textSize="15sp"
            android:textColor="#707F7F"
            android:gravity="left" />

        <EditText
            android:id="@+id/edit_javaIP"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:ems="10"
            android:textSize="15sp"
            android:layout_below="@+id/text_javaServer"
            android:hint="IP"
            android:inputType="text"
            android:textColorHint="#CDCDCD"
            android:padding="10dp"
            android:text=""/>

        <EditText
            android:id="@+id/edit_javaPort"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:ems="10"
            android:textSize="15sp"
            android:layout_below="@+id/edit_javaIP"
            android:hint="PORT"
            android:inputType="number"
            android:textColorHint="#CDCDCD"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:text=""/>

        <Button
            android:id="@+id/btn_modify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_javaPort"
            android:text="APPLY"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:layout_weight="1"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>

</LinearLayout>